
<div class="row">
  <div class="col-xs-12">
    

<%=form_for(@user, :html=> {class: "form-horizontal",role:"form"}) do |f| %>

  <div class="form-group">
    <div class="control-label col-sm-2">
        <%= f.label  :Username %>
    </div>
  
    
    <div class="col-sm-4">
      <%= f.text_field :user_id ,class:"form-control",id:"userid-text",placeholder:"username"%>
    </div>
    
  </div>
  
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    
    <div class="col-sm-4">
      <%= f.text_field :email,class:"form-control",id:"email-text",placeholder:"Email"%>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
      
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password_digest,class:"form-control",id:"password-text",placeholder:"Password"%>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary btn-default">Sign in</button>
    </div>
  </div>
<% end %>

  </div>
</div>